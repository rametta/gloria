{
  "name": "gloria",
  "version": "1.0.0",
  "description": "Github bot",
  "contributors": [
    "Jason Rametta",
    "Valeria Shpiner"
  ],
  "license": "Apache-2.0",
  "repository": "https://github.com/gloriabot/gloria.git",
  "homepage": "https://github.com/gloriabot/gloria",
  "bugs": "https://github.com/gloriabot/gloria/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "deploy": "now --local-config=./now.json --token=$NOW_TOKEN -e NODE_ENV=production -e APP_ID=$APP_ID -e WEBHOOK_SECRET=$WEBHOOK_SECRET -e PRIVATE_KEY=$PRIVATE_KEY",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@types/nock": "^9.3.0",
    "nock": "^10.0.0",
    "pratica": "^1.4.16",
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.0",
    "nodemon": "^1.17.2",
    "now": "^15.2.0",
    "smee-client": "^1.0.2",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^18.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
